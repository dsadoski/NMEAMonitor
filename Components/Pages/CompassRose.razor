@using Blazor.Extensions
<BECanvas @ref="_canvasReference"
          Width="400"
          Height="300"></BECanvas>


@code {
    private Canvas2DContext _context;
    protected BECanvasComponent _canvasReference;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            _context = await _canvasReference.CreateCanvas2DAsync();

            // Draw a filled rectangle
            await _context.SetFillStyleAsync("green");
            await _context.FillRectAsync(10, 10, 100, 100);

            // Draw text
            await _context.SetFontAsync("48px serif");
            await _context.StrokeTextAsync("Hello Blazor Canvas!", 10, 150);

            // Draw a stroked rectangle
            await _context.SetStrokeStyleAsync("blue");
            await _context.SetLineWidthAsync(5);
            await _context.StrokeRectAsync(120, 10, 80, 80);

            // Draw a line
            await _context.BeginPathAsync();
            await _context.MoveToAsync(20, 200);
            await _context.LineToAsync(200, 220);
            await _context.StrokeAsync();
        }
    }
}

